#:kivy 1.0.9

<PhytecBackground@AnchorLayout>:
    anchor_x: 'center'
    anchor_y: 'center'
    padding: 13
    canvas:
        Rectangle:
            source: 'images/background.jpg'
            size: self.size

<SmallerWhiteBackground@BoxLayout>:
    orientation: 'vertical'
    padding: 10 
    spacing: 10
    canvas:
        Color:
            rgba: 1,1,1,0.9
        Rectangle:
            pos: self.pos
            size: self.size

<TextLabel@Label>:
    color: (0,0,0,1)
    markup: True
    # To wrap the text with max width
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]


<HomeScreen>:
    PhytecBackground:
        SmallerWhiteBackground:
            BoxLayout:
                orientation:"horizontal"
                size_hint: 1,0.05

                TextLabel: 
                    id: title
                    text: "[size=20sp]Home Page[/size]"
                
                Button:
                    text: "Exit"
                    size_hint_x: 0.1
                    on_release: app.stop()

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: "L"
                    size_hint: (0.08,0.1)
                    pos_hint: {'center_y':0.5}
                    disabled: True # TODO: enable or disable depending on the page I am on 
            
                GridLayout:
                    cols: 3
                    rows: 3
                    padding: 10
                    spacing: 10

                    Button: 
                        text: "Infos Device and Phytec"
                        on_release: root.manager.current = 'info'

                    Button: 
                        text: "Kivy Catalog"
                        on_release: root.manager.current = 'showcase'

                    Button: 
                        text: "Multitouch"
                        on_release: root.manager.current = 'touch'

                    Button: 
                        text: "3D Rendering"
                        on_release: root.manager.current = '3D'

                    Button: 
                        text: "Camera"

                    Button: 
                        text: "Other"

                Button:
                    text: "R"
                    size_hint: (0.08,0.1)
                    pos_hint: {'center_y':0.5}

                    