<Subtitle@TextLabel>:
    canvas: 
        Color:
            rgb: 0,0,0
        Rectangle: 
            size: self.width, 0.9
            pos: self.pos

<InfoScreen>:
    PhytecBackground: 
        SmallerWhiteBackground: 
            id: template_background

            BoxLayout:
                orientation:"horizontal"
                size_hint: 1,0.05

                TextLabel: 
                    id: title
                    text: "[size=20sp]Informations[/size]"
                
                Button:
                    text: "Home"
                    size_hint_x: 0.1
                    on_release: root.manager.current='home'


            BoxLayout:
                orientation:'horizontal'
                spacing: 20

                BoxLayout:
                    orientation:'vertical'
                    spacing: 10 

                    Subtitle: 
                        text: "[b]PHYTEC[/b]\nYour partner for embedded systems"

                    TextLabel: 
                        text: root.phytec_description

                    AnchorLayout:
                        anchor_x: 'center'
                        Image: 
                            source: 'images/PHYTEC.png'
                            size_hint_y: None
                            height: dp(40)
                BoxLayout:
                    orientation:'vertical'
                    spacing: 10
                    Subtitle: 
                        text: "[b]DEVICE INFO[/b]\nSoftware"

                    TextLabel: 
                        text: root.device_description

                    BoxLayout: