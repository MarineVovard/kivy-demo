<Screen3DRendering>:
    PhytecBackground: 
        SmallerWhiteBackground: 
            id: template_background

            BoxLayout:
                orientation:"horizontal"
                size_hint: 1,0.05

                TextLabel: 
                    id: title
                    text: "[size=20sp]3D Rendering[/size]"
                
                Button:
                    text: "Home"
                    size_hint_x: 0.1
                    on_release: root.manager.current='home'

            AnchorLayout:
                anchor_x: 'center'
                canvas.before:
                    Color:
                        rgb: .6, .6, .6
                    Rectangle:
                        size: self.size
                        source: 'showcase/data/background.png'
                        pos: self.pos

                Renderer:
                    id: renderer